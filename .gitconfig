[user]
  name = Jon Scott Clark
  email = jonscottclark@gmail.com

[alias]
  aa  = add -A
  br  = branch
  ci  = commit
  cm  = commit -m
  co  = checkout
  df  = diff
  g   = grep -I
  lg  = log -p
  loq = log --graph --all --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(bold white)â€” %an%C(reset)%C(bold yellow)%d%C(reset)' --abbrev-commit --date=relative
  pb  = publish-branch
  rb  = rbranch
  rc  = rank-contributors
  rv  = review
  sm  = show-merges
  st  = status
  clean-ignored = !git ls-files -i --exclude-from=.gitignore | xargs git rm --cached
  stash-unapply = !git stash show -p | git apply -R

[branch]
  autosetuprebase = always

[color]
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[merge]
  log = true

[push]
  default = simple

[core]
  editor = subl -n -w
  excludesfile = ~/.gitignore_global

[url "git@github.com:"]
  insteadOf     = "gh:"
  pushInsteadOf = "github:"
  pushInsteadOf = "git://github.com/"

[url "git://github.com/"]
  insteadOf = "github:"

[url "git@gist.github.com:"]
  insteadOf     = "gst:"
  pushInsteadOf = "gist:"
  pushInsteadOf = "git://gist.github.com/"

[url "git://gist.github.com/"]
  insteadOf = "gist:"

[url "git@heroku.com:"]
  insteadOf = "heroku:"